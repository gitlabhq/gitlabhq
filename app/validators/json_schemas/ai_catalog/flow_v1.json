{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "triggers",
    "steps"
  ],
  "additionalProperties": false,
  "properties": {
    "triggers": {
      "type": "array",
      "items": {}
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "agent_id",
          "current_version_id",
          "pinned_version_prefix"
        ],
        "properties": {
          "agent_id": {
            "type": "integer"
          },
          "current_version_id": {
            "type": "integer"
          },
          "pinned_version_prefix": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "type": "string",
                "pattern": "^\\d+(?:\\.\\d+){0,2}$"
              }
            ]
          }
        },
        "additionalProperties": false
      }
    }
  }
}

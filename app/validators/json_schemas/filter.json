{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/group"
  },
  "definitions": {
    "group": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "group"
        },
        "match": {
          "type": "string",
          "enum": [
            "all",
            "any"
          ]
        },
        "rules": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/group"
              },
              {
                "$ref": "#/definitions/rule"
              }
            ]
          }
        }
      },
      "required": [
        "rules"
      ]
    },
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "field": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": [
            "eq",
            "ne",
            "gt",
            "lt",
            "contains",
            "not_contains",
            "in",
            "not_in"
          ]
        },
        "value": {}
      },
      "required": [
        "field",
        "operator",
        "value"
      ]
    }
  }
}

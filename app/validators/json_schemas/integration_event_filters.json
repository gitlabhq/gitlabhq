{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Integration Event Filters",
  "definitions": {
    "string_array": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "actions": {
      "type": "object",
      "description": "Filter events by action types per event type",
      "additionalProperties": false,
      "properties": {
        "merge_request": {
          "$ref": "#/definitions/string_array"
        },
        "issue": {
          "$ref": "#/definitions/string_array"
        },
        "confidential_issue": {
          "$ref": "#/definitions/string_array"
        },
        "incident": {
          "$ref": "#/definitions/string_array"
        }
      }
    },
    "users": {
      "type": "object",
      "description": "Filter events by users per event type",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "user_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "uniqueItems": true
          },
          "mode": {
            "enum": [
              "include",
              "exclude"
            ]
          }
        },
        "required": [
          "user_ids",
          "mode"
        ]
      }
    }
  }
}

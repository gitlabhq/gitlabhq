{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Work item user preference display settings",
  "type": "object",
  "properties": {
    "hiddenMetadataKeys": {
      "description": "Array of metadata keys that should be hidden in the work item display",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "assignee",
          "blocked",
          "blocking",
          "dates",
          "health",
          "labels",
          "milestone",
          "popularity",
          "weight",
          "comments",
          "iteration",
          "status"
        ]
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Import::Offline::Configuration#object_storage_configuration for AWS S3 storage",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "aws_access_key_id",
    "aws_secret_access_key",
    "region",
    "path_style"
  ],
  "properties": {
    "aws_access_key_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^\\w*$"
    },
    "aws_secret_access_key": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[\\w\\+\\/]*$"
    },
    "region": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "path_style": {
      "type": "boolean"
    }
  }
}

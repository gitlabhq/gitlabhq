- if @merge_requests.any?
  - @merge_requests.group_by(&:target_project).each do |group|
    .panel.panel-default.panel-small
      - project = group[0]
      .panel-heading
        = link_to_project project
        = link_to '显示所有', namespace_project_merge_requests_path(project.namespace, project), class: 'pull-right'
      %ul.well-list.mr-list
        - group[1].each do |merge_request|
          = render 'projects/merge_requests/merge_request', merge_request: merge_request
  = paginate @merge_requests, theme: "gitlab"

- else
  .nothing-here-block 无合并请求可显示

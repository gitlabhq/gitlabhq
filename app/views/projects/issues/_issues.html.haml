%ul.content-list.issues-list
  = render @issues
  - if @issues.blank?
    %li
      .nothing-here-block No issues to show

- if @issues.present?
  .issuable-filter-count
    %span.pull-right
      = number_with_delimiter(@issues.total_count)
      issues for this filter

  = paginate @issues, theme: "gitlab"

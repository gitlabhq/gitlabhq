.nav-links.sub-nav
  %ul{ class: (container_class) }
    - if project_nav_tab?(:issues) && !current_controller?(:merge_requests)
      = nav_link(controller: :issues) do
        = link_to namespace_project_issues_path(@project.namespace, @project), title: 'Issues' do
          %span
            Issues

    = nav_link(controller: :board) do
      = link_to 'https://www.justinmind.com/usernote/tests/20932568/20938547/20951683/index.html#/screens/d12245cc-1680-458d-89dd-4f0d7fb22724', title: 'Board' do
        %span
          Board

    - if project_nav_tab?(:merge_requests) && current_controller?(:merge_requests)
      = nav_link(controller: :merge_requests) do
        = link_to namespace_project_merge_requests_path(@project.namespace, @project), title: 'Merge Requests' do
          %span
            Merge Requests

    - if project_nav_tab? :labels
      = nav_link(controller: :labels) do
        = link_to namespace_project_labels_path(@project.namespace, @project), title: 'Labels' do
          %span
            Labels

    - if project_nav_tab? :milestones
      = nav_link(controller: :milestones) do
        = link_to namespace_project_milestones_path(@project.namespace, @project), title: 'Milestones' do
          %span
            Milestones

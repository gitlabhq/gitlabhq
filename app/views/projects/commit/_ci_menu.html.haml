- if !local_assigns.fetch(:hide_empty, false) || @commit.present(current_user: current_user).any_pipelines?
  = gl_tabs_nav({ class: 'commit-ci-menu gl-flex gl-grow'}) do
    = gl_tab_link_to project_commit_path(@project, @commit.id) do
      = _('Changes')
      = gl_tab_counter_badge(@files_changed_count || @diffs.size)
    = gl_tab_link_to pipelines_project_commit_path(@project, @commit.id) do
      = _('Pipelines')
      = gl_tab_counter_badge(@commit.pipelines.size, { class: 'js-pipelines-mr-count' })

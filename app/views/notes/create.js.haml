- if @note.valid?
  :plain
    $("#new_note .errors").remove();
    $("#notes-list").append("#{escape_javascript(render(:partial => 'show', :locals => {:note => @note} ))}");
    $('#note_note').val("");
- else
  :plain
    $("#new_note").replaceWith("#{escape_javascript(render('form'))}");

:plain 
  $("#submit_note").removeAttr("disabled");

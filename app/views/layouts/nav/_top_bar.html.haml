%div{ class: ['top-bar-fixed container-fluid', paneled_view && 'gl-rounded-t-lg gl-sticky gl-top-0 gl-left-0 gl-mx-0 gl-w-full'], data: { testid: 'top-bar' } }
  .top-bar-container.gl-flex.gl-items-center.gl-gap-2{ class: extra_top_bar_classes }
    .gl-grow.gl-basis-0.gl-flex.gl-items-center.gl-justify-start.gl-gap-3
      - unless project_studio_enabled?
        = render Pajamas::ButtonComponent.new(icon: 'sidebar', category: :tertiary,
          button_options: { class: 'js-super-sidebar-toggle-expand super-sidebar-toggle -gl-ml-3',
                            aria: { controls: 'super-sidebar', expanded: 'false', label: _('Primary navigation sidebar') } })
      = render "layouts/nav/breadcrumbs/breadcrumbs"
    = dispensable_render_if_exists 'layouts/nav/ask_duo_button'

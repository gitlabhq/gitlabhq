- breadcrumb_title s_('Observability|Observability Access Requested')
- page_title s_('Observability|Observability Access Requested')

- content_for :page_title, s_('Observability|Observability Access Requested')
- content_for :page_description, s_('Observability|Your observability access request has been submitted successfully')

.page-content
  .content-wrapper
    .container-fluid.container-limited
      .row
        .col-md-10.col-md-offset-1
          .gl-text-center.gl-mb-8
            %h1.gl-text-size-h1.gl-font-bold.gl-mb-4
              = s_('Observability|Access Request Submitted')
            %p.gl-text-lg.gl-text-subtle.gl-mb-6
              = s_('Observability|for %{group_name}') % { group_name: @group.name }

          = render Pajamas::CardComponent.new(card_options: { class: 'gl-mb-8' }) do |c|
            - c.with_body do
              .gl-p-8
                .gl-text-center.gl-mb-8
                  .gl-mb-6
                    = sprite_icon('check-circle', css_class: 'gl-text-success', size: 64)

                  %h2.gl-text-size-h2.gl-font-bold.gl-mb-4
                    = s_('Observability|Thank You for Your Request!')

                  %p.gl-text-lg.gl-line-height-24.gl-mb-6
                    = s_('Observability|Your request to enable GitLab Observability for this group has been successfully submitted. Our team will review and provision your observability environment.')

                  %p.gl-text-lg.gl-line-height-24.gl-text-secondary.gl-mb-8
                    = s_('Observability|You will receive an email notification once your observability environment is ready.')

          = render Pajamas::AlertComponent.new(variant: :info, title: s_('Observability|What Happens Next'), dismissible: false, alert_options: { class: 'gl-mb-6' }) do |c|
            - c.with_body do
              .gl-grid.gl-grid-cols-1.md:gl-grid-cols-3.gl-gap-6
                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('clock', css_class: 'gl-text-primary gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Provisioning Time')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Up to one business day')

                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('mail', css_class: 'gl-text-primary gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Email Notification')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|You\'ll receive confirmation when ready')

                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('rocket', css_class: 'gl-text-primary gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Ready to Use')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Start monitoring your applications')

          = render Pajamas::AlertComponent.new(variant: :success, title: s_('Observability|What You\'ll Get Access To'), dismissible: false, alert_options: { class: 'gl-mb-6' }) do |c|
            - c.with_body do
              .gl-grid.gl-grid-cols-1.md:gl-grid-cols-2.gl-gap-6
                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('check', css_class: 'gl-text-success gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|APM Dashboards')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Application performance monitoring with real-time metrics')

                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('check', css_class: 'gl-text-success gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Distributed Tracing')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Visualize request flows across microservices')

                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('check', css_class: 'gl-text-success gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Centralized Logs')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Powerful log management and querying')

                .gl-flex.gl-items-start.gl-gap-4
                  = sprite_icon('check', css_class: 'gl-text-success gl-mt-1', size: 16)
                  .gl-flex.gl-flex-col
                    %strong.gl-mb-2
                      = s_('Observability|Smart Alerts')
                    %span.gl-text-sm.gl-text-subtle
                      = s_('Observability|Anomaly-based alerting and notifications')

          = render Pajamas::AlertComponent.new(variant: :warning, title: s_('Observability|While You Wait'), dismissible: false, alert_options: { class: 'gl-mb-8' }) do |c|
            - c.with_body do
              .gl-flex.gl-items-start.gl-gap-4
                = sprite_icon('book', css_class: 'gl-text-warning gl-mt-1', size: 16)
                .gl-flex.gl-flex-col
                  %p.gl-text-sm.gl-mb-3
                    = s_('Observability|Prepare for observability by reviewing our ')
                    = link_to(s_('Observability|documentation'), help_page_path('operations/observability.md'), target: '_blank', rel: 'noopener noreferrer', class: 'gl-text-link gl-font-medium')
                    = s_('Observability| and best practices.')

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique name for the permission"
    },
    "description": {
      "type": "string",
      "description": "Description of the permission"
    },
    "feature_category": {
      "type": "string",
      "description": "Feature category of the permission",
      "format": "known_product_category"
    },
    "scopes": {
      "type": "array",
      "description": "Specifies scopes where the permission is effective",
      "items": {
        "enum": [
          "admin",
          "instance",
          "group",
          "project"
        ]
      }
    }
  },
  "required": [
    "name",
    "description",
    "feature_category",
    "scopes"
  ]
}

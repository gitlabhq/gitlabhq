{
  "type": "object",
  "required": [
    "id",
    "created_at",
    "expires_at",
    "access_level",
    "requested_at",
    "source",
    "valid_roles",
    "can_update",
    "can_remove"
  ],
  "properties": {
    "id": { "type": "integer" },
    "created_at": { "type": "date-time" },
    "expires_at": { "type": ["date-time", "null"] },
    "requested_at": { "type": ["date-time", "null"] },
    "can_update": { "type": "boolean" },
    "can_remove": { "type": "boolean" },
    "access_level": {
      "type": "object",
      "required": ["integer_value", "string_value"],
      "properties": {
        "integer_value": { "type": "integer" },
        "string_value": { "type": "string" }
      },
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "required": ["id", "full_name", "web_url"],
      "properties": {
        "id": { "type": "integer" },
        "full_name": { "type": "string" },
        "web_url": { "type": "string" }
      },
      "additionalProperties": false
    },
    "valid_roles": { "type": "object" },
    "created_by": {
      "type": "object",
      "required": ["name", "web_url"],
      "properties": {
        "name": { "type": "string" },
        "web_url": { "type": "string" }
      },
      "additionalProperties": false
    },
    "user": {
      "allOf": [
        { "$ref": "member_user.json" }
      ]
    },
    "invite": {
      "type": "object",
      "required": ["email", "avatar_url", "can_resend"],
      "properties": {
        "email": { "type": "string" },
        "avatar_url": { "type": "string" },
        "can_resend": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}

- if remote_mirror.update_in_progress?
  %button.btn.disabled{ type: 'button', data: { toggle: 'tooltip', container: 'body' }, title: 'Updating' }
    = icon("refresh spin")
- else
  = link_to update_now_project_mirror_path(@project, sync_remote: true), method: :post, class: "btn", data: { toggle: 'tooltip', container: 'body' }, title: 'Update now' do
    = icon("refresh")
